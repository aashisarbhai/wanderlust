<% layout("/layouts/boilerplate") %>

<style>
  /* --- Base filter strip --- */
  #filtersWrapper {
    position: relative;
    padding: 1rem 3rem;
  }

  #filters {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    overflow-x: auto;
    scroll-behavior: smooth;
    scrollbar-width: none;
  }
  #filters::-webkit-scrollbar {
    display: none;
  }

  .filter {
    text-align: center;
    opacity: 0.7;
    flex: 0 0 auto;
  }
  .filter a{
    text-decoration: none;
    color: black;
  }

  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.8rem;
    margin-top: 0.4rem;
  }

  /* --- Arrows --- */
  .scroll-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 2;
    opacity: 0.8;
    border: none;
    background-color: #fff;
    box-shadow: 0 0 5px rgba(0,0,0,0.2);
    border-radius: 50%;
    width: 2.2rem;
    height: 2.2rem;
  }

  .scroll-btn.left {
    left: 0.3rem;
  }
  .scroll-btn.right {
    right: 0.3rem;
  }

  /* --- Tax toggle --- */
  .tax-toggle {
    border: 1px solid black;
    border-radius: 1rem;
    height: 3.25rem;
    padding: 1rem;
    display: flex;
    align-items: center;
    margin-left: 2rem;
    margin-top: 0.8rem;
  }

  /* --- Responsive widths --- */
  @media (min-width: 1200px) {
    .filter { flex: 0 0 calc(100% / 8 - 1rem); }
  }
  @media (max-width: 1199px) and (min-width: 992px) {
    .filter { flex: 0 0 calc(100% / 6 - 1rem); }
  }
  @media (max-width: 991px) and (min-width: 768px) {
    .filter { flex: 0 0 calc(100% / 5 - 1rem); }
  }
  @media (max-width: 767px) {
    .filter { flex: 0 0 calc(100% / 4 - 1rem); }
  }
</style>

<!-- Filter Section -->
<div id="filtersWrapper" class="my-3">
  <button class="scroll-btn left" id="scrollLeft">
    <i class="fa-solid fa-chevron-left"></i>
  </button>

  <div id="filters">
    <div class="filter"><a href="/listings/category/Trending" ><i class="fa-solid fa-fire fa-lg"></i><p>Trending</p></a></div>
    <div class="filter"><a href="/listings/category/Rooms" ><i class="fa-solid fa-bed fa-lg"></i><p>Rooms</p></a></div>
    <div class="filter"><a href="/listings/category/Iconic cities" ><i class="fa-solid fa-mountain-city fa-lg"></i><p>Iconic cities</p></a></div>
    <div class="filter"><a href="/listings/category/Mountains" ><i class="fa-solid fa-mountain fa-lg"></i><p>Mountains</p></a></div>
    <div class="filter"><a href="/listings/category/Castles" ><i class="fa-brands fa-fort-awesome fa-lg"></i><p>Castles</p></a></div>
    <div class="filter"><a href="/listings/category/Amazing pools" ><i class="fa-solid fa-person-swimming fa-lg"></i><p>Amazing pools</p></a></div>
    <div class="filter"><a href="/listings/category/Hotels" ><i class="fa-solid fa-hotel fa-lg"></i><p>Hotels</p></a></div>
    <div class="filter"><a href="/listings/category/Tasty food" ><i class="fa-solid fa-utensils fa-lg"></i><p>Tasty food</p></a></div>
    <div class="filter"><a href="/listings/category/Camping" ><i class="fa-solid fa-campground fa-lg"></i><p>Camping</p></a></div>
    <div class="filter"><a href="/listings/category/Farms" ><i class="fa-solid fa-cow fa-lg"></i><p>Farms</p></a></div>
    <div class="filter"><a href="/listings/category/Artic" ><i class="fa-solid fa-snowman fa-lg"></i><p>Arctic</p></a></div>
    <div class="filter"><a href="/listings/category/Domes" ><i class="fa-solid fa-igloo fa-lg"></i><p>Domes</p></a></div>
  </div>

  <button class="scroll-btn right" id="scrollRight">
    <i class="fa-solid fa-chevron-right"></i>
  </button>
</div>

