<% layout("/layouts/boilerplate") %>
<h2>Results for "<%= query %>"</h2>
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
  <% results.forEach(r => { %>
    <div class="col mb-4">
      <a href="/listings/<%= r._id %>" class="listing-link text-decoration-none text-dark">
        <div class="card listing-card h-100">
          <img src="<%= r.image.url %>" class="card-img-top" alt="listing image" style="height: 20rem; object-fit: cover;">
          <div class="card-body">
            <p class="card-text">
              <b><%= r.title %></b><br>
              â‚¹<%= r.price.toLocaleString("en-IN") %>/night
              <i class="tax-info">&nbsp;&nbsp;+18% GST</i>
            </p>
          </div>
        </div>
      </a>
    </div>
  <% }) %>
</div>